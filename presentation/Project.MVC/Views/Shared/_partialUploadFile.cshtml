<div class="modal" tabindex="-1" role="dialog" id="uploadfilemodal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fa fa-upload"></i>Upload file</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body"  id="modalcontentupload">
                <input type="file" id="uploadfiles" multiple>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" id="btnfileuploadcancel">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="UploadFileToServer()" id="btnfileupload"><i class="fa fa-upload"></i>Upload</button>
            </div>
        </div>
    </div>
</div>